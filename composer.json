{
	"name": "yard/sage-child-theme-support",
	"type": "package",
	"description": "Package to enable Acorn in child themes",
	"license": "MIT",
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "8.1"
		}
	},
	"require": {
		"php": ">=8.1",
		"roots/acorn": "^4.3",
		"sentry/sentry-laravel": "^4.4"
	},
	"require-dev": {
		"larastan/larastan": "^2.9",
		"orchestra/testbench": "^8.31",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"yard/php-cs-fixer-rules": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\SageChildThemeSupport\\": "src/"
		},
		"files": [
			"src/helpers.php"
		]
	},
	"scripts": {
		"post-autoload-dump": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
		],
		"analyse": "vendor/bin/phpstan analyse --debug --memory-limit 1G",
		"format": "vendor/bin/php-cs-fixer fix"
	}
}
